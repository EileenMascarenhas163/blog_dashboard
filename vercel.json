{
    "version": 2,
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      },
      {
        "src": "backend/server.js",
        "use": "@vercel/node",
        "config": {
          "memory": 1024,
          "maxDuration": 10
        }
      }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/backend/server.js" },
      { "source": "/(.*)",     "destination": "/frontend/dist/index.html" }
    ]
  }